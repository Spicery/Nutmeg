{
    "$schema": "http://json-schema.org/schema#",
    "$ref": "#/definitions/EXPRESSION",
    "definitions": {
        "PATTERN": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "kind": { "const": "id" },
                        "name": { "type": "string" },
                        "reftype": { "enum": [ "var" ] }  
                    },
                    "required": ["kind", "name", "reftype"]
                },
                {
                    "type": "object",
                    "properties": {
                        "kind": { "const": "seq" },
                        "body": {
                            "type": "array",
                            "items": { "$ref": "#/definitions/PATTERN" }
                        }
                    },
                    "required": ["kind", "body"]
                }
            ]
        },
        "EXPRESSION": {
            "oneOf": [
                { "$ref": "#/definitions/BINDING" },
                {
                    "type": "object",
                    "properties": {
                        "kind": { "const": "seq" },
                        "body": {
                            "type": "array",
                            "items": { "$ref": "#/definitions/EXPRESSION" }
                        }
                    },
                    "required": ["kind", "body"]
                },
                {
                    "type": "object",
                    "properties": {
                        "kind": { "const": "let" },
                        "top": { "$ref": "#/definitions/EXPRESSION" },
                        "bottom": { "$ref": "#/definitions/EXPRESSION" }
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "kind": { "const": "string" },
                        "value": { "type": "string" }
                    },
                    "required": ["kind", "value"]
                },
                {
                    "type": "object",
                    "properties": {
                        "kind": { "const": "int" },
                        "radix": { "type": "integer" },
                        "value": { "type": "string" }
                    },
                    "required": ["kind", "value"]
                },
                {
                    "type": "object",
                    "properties": {
                        "kind": { "const": "id" },
                        "name": { "type": "string" },
                        "reftype": { "enum": [ "get", "set" ] }
                    },
                    "required": ["kind", "name", "reftype"]
                },
                {
                    "type": "object",
                    "properties": {
                        "kind" : { "const": "syscall" },
                        "name" : { "type": "string" },
                        "arguments": { "$ref": "#/definitions/EXPRESSION" }
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "kind" : { "const": "if" },
                        "test" : { "$ref": "#/definitions/EXPRESSION" },
                        "then" : { "$ref": "#/definitions/EXPRESSION" },
                        "else": { "$ref": "#/definitions/EXPRESSION" }
                    },
                    "required": ["kind", "testactions", "else"]
                },
                {
                    "type": "object",
                    "properties": {
                        "kind" : { "const": "call" },
                        "function": { "$ref": "#/definitions/EXPRESSION" },
                        "arguments": { "$ref": "#/definitions/EXPRESSION" }
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "kind" : { "const": "function" },
                        "parameters": { "$ref": "#/definitions/PATTERN" },
                        "body": { "$ref": "#/definitions/EXPRESSION" }
                    },
                    "required": ["kind", "parameters", "body"]
                }
            ]
        },
        "BINDING": {
            "type": "object",
            "properties": {
                "kind": { "enum": [ "binding" ] },
                "lhs": { "$ref": "#/definitions/PATTERN" },
                "rhs": { "$ref": "#/definitions/EXPRESSION" }
            },
            "required": ["kind", "lhs", "rhs"]
        }
    }
}